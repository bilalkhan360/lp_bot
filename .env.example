# Aerodrome Auto-Balancer Configuration
# Copy this file to .env and fill in your values

# ============================================================
# REQUIRED: Your wallet private key
# ============================================================
# Your private key (WITHOUT 0x prefix)
PRIVATE_KEY=

# ============================================================
# NETWORK CONFIGURATION
# ============================================================
# Base RPC URL (public or private like Infura/Alchemy)
BASE_RPC_URL=https://mainnet.base.org

# ============================================================
# OPTIONAL: Aerodrome Contract Addresses
# Override if you need different contracts (e.g., for testing)
# ============================================================
# NonfungiblePositionManager (for V3 positions)
# AERODROME_POSITION_MANAGER=0x03a520b32C04BF3bEEf7BEb6E269D4F1CAdF4EDA

# Router (for swaps)
# AERODROME_ROUTER=0x1Fd9Fa3718f589dF5BE5a09C6cC15d8d31d2C79c

# Factory (for finding pools)
# AERODROME_FACTORY=0x420DD381b31aEf6683db6B902084cB0FFECe40Da

# ============================================================
# BOT SETTINGS
# ============================================================
# Check interval in milliseconds (default: 30000 = 30 seconds)
CHECK_INTERVAL=30000

# Slippage tolerance in basis points (default: 300 = 0.3%)
SLIPPAGE_BPS=300

# Minimum swap size in USDC terms. Smaller imbalances are skipped.
MIN_SWAP_VALUE_USDC=0

# Gas price strategy: 'legacy' | 'eip1559' | 'auto'
GAS_STRATEGY=auto

# Max gas price in gwei (for EIP-1559)
MAX_GAS_PRICE=10

# Priority fee in gwei (Base is usually very low; default 0.001)
PRIORITY_FEE_GWEI=0.001

# RPC call timeout in ms (estimateGas/send), default 30000
RPC_CALL_TIMEOUT_MS=30000

# Tx confirmation timeout in ms (default 180000 = 3 min)
TX_WAIT_TIMEOUT_MS=180000

# Enable/disable auto-rebalancing (use 'true' to enable)
AUTO_REBALANCE=false

# Range multiplier for rebalancing (higher = wider range = less frequent rebalancing)
# Default in code: 2.6
RANGE_MULTIPLIER=2.6

# Out-of-range threshold % to trigger rebalance
REBALANCE_THRESHOLD=20

# ============================================================
# KYBER AGGREGATOR (USED FOR SWAPS)
# ============================================================
# Base URL for Kyber aggregator API
KYBER_API_BASE_URL=https://aggregator-api.kyberswap.com

# Chain key used in Kyber endpoints
KYBER_CHAIN=base

# Optional but recommended for better rate limits
KYBER_CLIENT_ID=lp_rebalancer

# Optional tracking source string passed to Kyber
KYBER_SOURCE=lp_rebalancer

# Restrict route search to these sources (comma separated)
# Set empty to allow all
KYBER_INCLUDED_SOURCES=

# Optional security allowlist of Kyber routers (comma separated)
# Leave empty to disable allowlist check
KYBER_ALLOWED_ROUTERS=0x6131B5fae19EA4f9D964eAc0408E4408b66337b5

# ============================================================
# OPTIONAL: Token Addresses (for common tokens)
# ============================================================
# TOKEN_WETH=0x4200000000000000000000000000000000000006
# TOKEN_USDC=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
# TOKEN_CBBTC=0xcbB7e00086518eEe1072D2C2B9E72b7974B9763
# TOKEN_DAI=0x50c5725949A6F0c72E6C4a641F24049A917DB0Cb
